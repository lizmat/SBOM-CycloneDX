use Test;
use SBOM::enums;    # for .EVAL
use SBOM::subsets;  # for .EVAL
use SBOM::CycloneDX;
use JSON::Fast:ver<0.19+>:auth<cpan:TIMOTIMO>;  # for parsing valid JSON sboms

my @files = $*PROGRAM.sibling("valid").dir.sort(*.basename);
my $raw-error := True;

plan +@files;

# Testing valid SBOMs

my $yaml-io := $*PROGRAM.sibling("valid.yml");
END .unlink with $yaml-io;

for @files -> $io {
    subtest "Testing $io" => {
        plan 9;

        my $sbom := SBOM::CycloneDX.new(:$raw-error, $io);
        if $sbom.build-errors -> @errors {
            for @errors {
                say .key ~ ": " ~ .value;
            }
            die;
        }
        isa-ok $sbom, SBOM::CycloneDX;

        my $json2 := $sbom.JSON;
        isa-ok $json2, Str;

        my $sbom2 := SBOM::CycloneDX.new(:$raw-error, |from-json $json2);
        isa-ok $sbom2, SBOM::CycloneDX;
        is-deeply $sbom2, $sbom, 'did we roundtrip from .JSON correctly';

        my $raku := $sbom.raku;
        isa-ok $raku, Str;

        my $sbom3 := $raku.EVAL;
        if $sbom3.build-errors -> @errors {
            for @errors {
                say .key ~ ": " ~ .value;
            }
        }
        isa-ok $sbom3, SBOM::CycloneDX;
        is-deeply $sbom3, $sbom, 'did we roundtrip from .raku correctly';

        $yaml-io.spurt: $sbom.YAML;
        my $sbom4 := SBOM::CycloneDX.new(:$raw-error, $yaml-io);
        isa-ok $sbom4, SBOM::CycloneDX;
        is-deeply $sbom4, $sbom, 'did we roundtrip from .YAML correctly';
    }
}

