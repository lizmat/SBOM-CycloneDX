use Test;
use SBOM::CycloneDX;

plan 4;

my constant $format = "CycloneDX";
my constant $spec   = "1.6";

my %minimal =
  bomFormat   => $format,
  specVersion => $spec,
;

my $sbom := SBOM::CycloneDX.new(|%minimal);
isa-ok $sbom, SBOM::CycloneDX;

is $sbom.bomFormat,   $format, 'is the bomFormat correct';
is $sbom.specVersion, $spec,   'is the specVersion correct';

is-deeply $sbom.version, 1, 'is the version correct';

